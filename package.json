{
  "name": "app",
  "private": true,
  "version": "0.0.1",
  "main": "server.js",
  "dependencies": {
    "ejs": "^2.0.0",
    "expandjs": "0.10.0",
    "express": "^4.0.0",
    "express-slash": "^2.0.0",
    "serve-favicon": "^2.0.0",
    "xp-emitter": "0.10.0",
    "xp-fs": "0.10.0",
    "xp-observer": "0.10.0",
    "xp-request": "0.10.0",
    "xp-schema": "0.10.0"
  },
  "devDependencies": {
    "crisper": "*",
    "uglifyjs": "*",
    "vulcanize": "*"
  },
  "scripts": {
    "build": "npm run build:vulcanize && npm run build:crisp && npm run build:minify",
    "build:vulcanize": "vulcanize components/app-shell/app-shell.html --inline-css --inline-scripts --strip-comments > static/vulcanized/app-shell.html",
    "build:crisp": "crisper --source static/vulcanized/app-shell.html --html static/vulcanized/app-shell.html --js static/vulcanized/app-shell.js",
    "build:minify": "uglifyjs static/vulcanized/app-shell.js --mangle --output static/vulcanized/app-shell.js",
    "restart": "npm run stop && npm run start",
    "restart-dev": "npm run stop && npm run start-dev",
    "restart-win": "npm run stop && npm run start-win",
    "start": "NODE_ENV=production forever start server.js",
    "start-dev": "forever start server.js",
    "start-win": "SET NODE_ENV=production && forever start server.js",
    "stop": "forever stop server.js"
  }
}
